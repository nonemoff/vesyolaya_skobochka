<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoodDiary.WeeklyStatisticsPage"
             Title="Статистика недели">
    <StackLayout Padding="20">
        <Label Text="Статистика за неделю:" FontSize="Large" HorizontalOptions="Center" />
        <CollectionView x:Name="WeeklyCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Vertical" Padding="5">
                        <Label Text="{Binding Date, StringFormat='Дата: {0:dd.MM.yyyy}'}" FontAttributes="Bold"/>
                        <Label Text="{Binding Summary}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
