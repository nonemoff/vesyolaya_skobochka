<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoodDiary.DayDynamicsPage"
             Title="Дневная динамика">
    <StackLayout Padding="20">
        <Label Text="Дневная динамика настроения:" FontSize="Large" HorizontalOptions="Center" />
        <CollectionView x:Name="MoodCollectionView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Horizontal" Padding="5">
                        <Label Text="{Binding Timestamp, StringFormat='{0:HH:mm}'}" WidthRequest="60"/>
                        <Label Text="{Binding MoodName}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
