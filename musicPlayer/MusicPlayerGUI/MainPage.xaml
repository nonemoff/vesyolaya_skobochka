<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MusicPlayerGUI.MainPage">
    <VerticalStackLayout Padding="20" Spacing="15">
        <!-- Поле для ввода пути к песням -->
        <Entry x:Name="PathEntry"
           Placeholder="Введите путь к песням" />

        <!-- Кнопка для загрузки песен -->
        <Button Text="Load Songs"
            Clicked="OnLoadSongsClicked" />

        <!-- Список для отображения загруженных треков -->
        <ListView x:Name="SongsListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Grid Padding="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackLayout Orientation="Vertical">
                                <Label Text="{Binding Title}"
                       FontSize="18"
                       FontAttributes="Bold" />
                                <Label Text="{Binding Artist}"
                       FontSize="14" />
                                <Label Text="{Binding Duration}"
                       FontSize="14" />
                            </StackLayout>
                            <!-- Кнопка для добавления трека в очередь -->
                            <Button Text="Add"
                      Grid.Column="1"
                      Clicked="OnAddTrackClicked" />
                        </Grid>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
